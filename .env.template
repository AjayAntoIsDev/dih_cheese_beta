# Pollinations AI Configuration
# Get your API key at https://enter.pollinations.ai (optional - free tier available)
POLLINATIONS_API_KEY=
POLLINATIONS_BASE_URL=https://gen.pollinations.ai
# Available models: openai, openai-fast, openai-large, gemini, gemini-fast, claude, claude-fast, 
# deepseek, grok, mistral, qwen-coder, perplexity-fast, perplexity-reasoning
POLLINATIONS_MODEL=openai

# Qdrant Vector Database Configuration
# Your Qdrant Cloud API key
QDRANT=your_qdrant_api_key
# Your Qdrant Cloud endpoint URL
QDRANT_ENDPOINT=https://your-cluster.cloud.qdrant.io
# Collection name for storing memories
QDRANT_COLLECTION_NAME=discord_memories
# Vector size (must match embedding model - default 1536 for OpenAI-compatible)
QDRANT_VECTOR_SIZE=1536

# Bot Personality Configuration
# System prompt that defines the bot's personality and behavior
SYSTEM_PROMPT=You are a helpful AI assistant in a Discord server. You are friendly, engaging, and helpful. You remember context from the conversation and respond appropriately. Keep your responses concise but informative.
# Bot display name
BOT_NAME=AI Assistant

# Memory Configuration
# Enable long-term memory storage in Qdrant
ENABLE_MEMORY=false
# Number of relevant memories to retrieve
MEMORY_SEARCH_LIMIT=5

# Context Configuration  
# If true, includes a prefix on every message sent to the agent with sender info
USE_SENDER_PREFIX=true
# Number of recent messages to include as context (0 to disable, default 5)
CONTEXT_MESSAGE_COUNT=5
# Enable fetching full thread context when message is in a thread
THREAD_CONTEXT_ENABLED=true
# Maximum number of messages to fetch from a thread (default 50, set to 0 for unlimited)
THREAD_MESSAGE_LIMIT=50

# Discord Bot Configuration
APP_ID=your_discord_app_id
DISCORD_TOKEN=your_discord_bot_token
PUBLIC_KEY=your_discord_public_key
# Set this if you want the bot to only listen to messages in a specific channel (ignores all other channels)
# DISCORD_CHANNEL_ID=your_discord_channel_id
# Set this if you want the bot to only respond in a specific channel (agent sees all messages but only replies here)
# DISCORD_RESPONSE_CHANNEL_ID=your_discord_response_channel_id

# Response Behavior
# If true, the bot will respond to DMs
RESPOND_TO_DMS=true
# Whether or not to respond to mentions
RESPOND_TO_MENTIONS=true
# Whether or not to respond to bots
RESPOND_TO_BOTS=false
# Whether or not to respond to generic messages (not mentions/replies)
RESPOND_TO_GENERIC=false
# If true, will send errors as messages in Discord
SURFACE_ERRORS=false
# If true, bot will reply in threads (creates new thread if needed, or uses existing thread)
REPLY_IN_THREADS=false

# Message Batching (accumulate messages before sending to agent)
# Enable/disable message batching
MESSAGE_BATCH_ENABLED=false
# Maximum number of messages to batch before auto-draining
MESSAGE_BATCH_SIZE=10
# Milliseconds to wait before auto-draining batch (default: 30 seconds)
MESSAGE_BATCH_TIMEOUT_MS=30000

# Timer Feature (randomly trigger bot activity)
# Enable or disable the timer feature
ENABLE_TIMER=false
# Maximum interval range in minutes for the random timer
TIMER_INTERVAL_MINUTES=15
# Probability of the timer firing (0.0 to 1.0)
FIRING_PROBABILITY=0.1

# App Configuration
PORT=3001
